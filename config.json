{
    "name": "MyTraining",
    "n_gpu": 1,

    "arch": {
        "type": "MyModel",
        "args": {
            
        }
    },
    "data_loader": {
        "type": "MyDataLoader",
        "args":{
            "data_dir": "data/data_patient",
            "batch_size": 32,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-3,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.9
        }
    },
    "trainer": {
        "epochs": 600,

        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 30,

        "tensorboard": true
    }
}
